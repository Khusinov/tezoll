<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".presentation.order_created.OrderCreated">

    <!-- Tasdiqlovchi belgi -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/order_confirmation_image"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#F9F9F9"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_order_confirmation" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Sarlavha -->
    <TextView
        android:id="@+id/order_confirmation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_confirmation_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/order_create"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold" />

    <!-- Qisqa ma'lumot -->
    <TextView
        android:id="@+id/order_confirmation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_confirmation_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:text=""
        android:textColor="#969CA5"
        android:textSize="14sp" />

    <!-- Orqaga tugmasi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/main_color"
        android:fontFamily="@font/lato_regular"
        android:text="@string/back"
        android:textColor="@color/black_text_color"
        android:textSize="18sp"
        app:cornerRadius="12dp" />

</RelativeLayout>
